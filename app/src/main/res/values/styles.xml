<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="preferenceTheme">@style/Settings</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
    </style>


    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorTextHighLight</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorTextHighLight</item>
    </style>

    <!-- set global TextView font to Roboto light -->
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text87</item>
    </style>

    <!-- set global Button font to Roboto light -->
    <style name="RobotoButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="InvertedRobotoButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- set style for preferences -->
    <style name="Settings" parent="@style/PreferenceThemeOverlay.Material">
        <item name="preferenceTint">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Base.Theme.AppCompat.Light</item>
    </style>

    <!-- set EditText style. DO NOT declare the parent view, it will break the colors.
    This style has to be set for each EditText with android:theme="@style/CustomEditTextStyle" -->
    <style name="CustomEditTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

    <!-- Set the text color for the EditText hint. -->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#888888</item>
    </style>


    <!-- TextView on the right of GradeDetailed Activity -->
    <style name="GradeDetailTextViewRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- TextView on the left of GradeDetailed Activity -->
    <style name="GradeDetailTextViewLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- RelativeLayout Row of GradeDetailed Activity -->
    <style name="GradeDetailRow">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/grade_divider</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="h1">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
